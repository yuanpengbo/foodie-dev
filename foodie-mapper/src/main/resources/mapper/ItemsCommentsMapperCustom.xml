<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.yuan.mapper.ItemsCommentsMapperCustom" >

  <select id="saveComments" parameterType="Map">
    insert into items_comments
    (id,user_id,item_id,item_name,item_spec_id,sepc_name,comment_level,content,updated_time,created_time)
    values
    <foreach collection="commentList" item="item" index="index" separator=",">
    (#{item.commentId},#{userId},#{item.itemId},#{item.itemName},#{item.itemSpecName},#{item.commentLevel},#{item.content},now(),now())
    </foreach>
  </select>
</mapper>